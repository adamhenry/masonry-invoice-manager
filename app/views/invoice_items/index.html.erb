<h1>Listing invoice_items</h1>

<table>
  <tr>
    <th>Invoice</th>
    <th>Description</th>
    <th>Item type</th>
    <th>Rate</th>
    <th>Quanity</th>
    <th>Amount</th>
  </tr>

<% for invoice_item in @invoice_items %>
  <tr>
    <td><%= link_to invoice_item.invoice.invoice_number, invoice_item %></td>
    <td><%=h invoice_item.description %></td>
    <td><%=h invoice_item.item_type %></td>
    <td><%=h invoice_item.rate %></td>
    <td><%=h invoice_item.quantity %></td>
    <td><%=h invoice_item.amount %></td>
    <td><%= link_to 'X', invoice_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

