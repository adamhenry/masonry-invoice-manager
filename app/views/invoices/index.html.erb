<h1>Listing invoices</h1>

<table>
  <tr>
    <th>Invoice Number</th>
    <th>Job</th>
    <th>Status</th>
    <th>Due date</th>
  </tr>

<% for invoice in @invoices %>
  <tr>
    <td><%= link_to invoice.invoice_number, invoice %></td>
    <td><%=h invoice.job.name %></td>
    <td><%=h invoice.current_status %></td>
    <td><%=h invoice.due_date %></td>
    <td><%= link_to 'X', invoice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New invoice', new_invoice_path %>
