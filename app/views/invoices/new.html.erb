<h1>New invoice</h1>

<% form_for(@invoice) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :job_id %>
    <%=h @invoice.job.name %>
	  <%= f.hidden_field :job_id %>
  </p>
  <p>
    <%= f.label :invoice_number %>
    <%= f.text_field :invoice_number %>
  </p>
  <p>
    <%= f.label :status %>
    <%= f.select :status, invoice_types %>
  </p>
  <p>
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'To Job', @invoice.job %>
