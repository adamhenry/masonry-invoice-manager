<p>
  <b>Job:</b>
  <%=h @invoice.job.name %>
</p>

<p>
  <b>Invoice number:</b>
  <%=h @invoice.invoice_number %>
</p>

<p>
  <b>Status:</b>
  <%=h @invoice.status %>
</p>

<p>
  <b>Due date:</b>
  <%=h @invoice.due_date %>
</p>

<p>
  <b>Paid date:</b>
  <%=h @invoice.paid_date %>
</p>


<h1>Items</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Type</th>
    <th>Amount</th>
  </tr>

<% for invoice_item in @invoice.invoice_items %>
  <tr>
    <td><%= link_to invoice_item.description, invoice_item %></td>
    <td><%=h invoice_item.item_type %></td>
    <td><%=h invoice_item.amount %></td>
    <td><%= link_to 'X', invoice_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Item', new_invoice_item_path + "/" + @invoice.id.to_s %>
<%=h new_invoice_item_path %>
<br />
<br />

<%= link_to 'Edit', edit_invoice_path(@invoice) %> |
<%= link_to 'Back', @invoice.job %>
