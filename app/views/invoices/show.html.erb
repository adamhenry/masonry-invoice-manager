<p>
  <b>Job:</b>
  <%=h @invoice.job.name %>
</p>

<p>
  <b>Invoice number:</b>
  <%=h @invoice.invoice_number %>
</p>

<p>
  <b>Status:</b>
  <%=h @invoice.status %>
</p>

<p>
  <b>Due date:</b>
  <%=h @invoice.due_date %>
</p>

<p>
  <b>Paid date:</b>
  <%=h @invoice.paid_date %>
</p>


<h3>Items</h3>

<table>
  <tr>
    <th>Description</th>
    <th>Type</th>
    <th>Amount</th>
  </tr>

<% for invoice_item in @invoice.invoice_items %>
  <tr>
    <td><%= link_to invoice_item.description, invoice_item %></td>
    <td><%=h invoice_item.item_type %></td>
    <td><%=h "$" + invoice_item.total.to_s %></td>
    <td><%= link_to 'X', invoice_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Item', new_invoice_item_path + "/" + @invoice.id.to_s %>
<br />
<br />

<h3>Payments</h3>

<table>
  <tr>
    <th>Payment type</th>
    <th>Check</th>
    <th>Amount</th>
    <th>Employee name</th>
    <th>Notes</th>
  </tr>

<% for payment in @invoice.payments %>
  <tr>
    <td><%=h payment.invoice_id %></td>
    <td><%=h payment.payment_type %></td>
    <td><%=h payment.check %></td>
    <td><%=h payment.amount %></td>
    <td><%=h payment.employee_name %></td>
    <td><%=h payment.notes %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Payment', new_payment_path + "/" + @invoice.id.to_s %>
<br />
<br />
<%= link_to 'Edit', edit_invoice_path(@invoice) %> |
<%= link_to 'Back', @invoice.job %>
