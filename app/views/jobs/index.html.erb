<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Client</th>
    <th>Address</th>
  </tr>

<% for job in @jobs %>
  <tr>
    <td><%= link_to job.name, job %></td>
    <td><%=h job.client %></td>
    <td><%=h job.address %></td>
    <td><%= link_to 'X', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New job', new_job_path %>
