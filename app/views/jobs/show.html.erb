<p>
  <b>Name:</b>    <%=h @job.name %>
  <br />
  <b>Client:</b> <%=h @job.client %>
  <br />
  <b>Address:</b> <%=h @job.address %>
</p>

<h1>Listing invoices</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Status</th>
    <th>Due date</th>
    <th>Actions</th>
  </tr>

<% for invoice in @job.invoices %>
  <tr>
    <td><%= link_to invoice.invoice_number, invoice %></td>
    <td><%=h invoice.status %></td>
    <td class="date"><%=h invoice.due_date.strftime("%b %d, %Y") unless invoice.due_date.nil?%></td>
    <td> <%= render_invoice_action_buttons invoice %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New invoice', new_invoice_path + "/" + @job.id.to_s %>
