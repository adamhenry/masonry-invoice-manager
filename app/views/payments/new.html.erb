<h1>New payment</h1>

<% form_for(@payment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :invoice_number %>
    <%= @payment.invoice.invoice_number %>
  </p>
  <p>
    <%= f.label :payment_type %>
    <%= f.select :payment_type, payment_types %>
  </p>
  <p>
    <%= f.label :check %> Number
    <%= f.text_field :check %>
  </p>
  <p>
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :employee_name %>
    <%= f.text_field :employee_name %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', payments_path %>
